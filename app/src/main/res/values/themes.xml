<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTwittweImageDiaplay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="singleRoundedImageView" parent="Theme.MyTwittweImageDiaplay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="rightRoundedImageView" parent="Theme.MyTwittweImageDiaplay">
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="leftRoundedImageView" parent="Theme.MyTwittweImageDiaplay">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>

    </style>
</resources>